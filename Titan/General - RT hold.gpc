/* 
Presses and holds RT when combo is activated
Down on the d pad activates and deactivates the hold
*/

int hold;

main 
	{
		if (event_press (XB360_DOWN))
			{
				hold = !hold;
			} 
		

		if (hold && get_val(XB360_B)) 
			{
				combo_run(combo_a);
			}
		
		else 
			{
				combo_stop(combo_a);
			}
    }

combo combo_a
	{ 
	    set_val (XB360_RT, 100);
	}
